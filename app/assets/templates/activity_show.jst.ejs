
<!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-9">

                <div class="thumbnail">
                    <img class="img-responsive"
                         src="<%= activity.escape('img_url_full_size') %>"
                         alt="" />
                    <div class="caption-full">
                        <h4 class="pull-right">
                          <%= "$" + s.numberFormat(parseFloat(activity.escape('price')), 2) %>
                        </h4>
                        <h4><%= activity.escape('title') %>
                        </h4>
                        <p><%= activity.escape('description') %></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">
                          <%= activity.reviews().length %> reviews
                        </p>
                        <p>
                          <div class="raty-avg-read-only"></div>
                        </p>
                    </div>
                </div>

                <div class="reviews-index"></div>

            </div>

            <% if (HeadOutdoors.CURRENT_USER.id) { %>
              <div class="col-md-2">
                  <p class="lead">Book Activity</p>
                  <div class="list-group">
                      <!-- <a href="#" class="list-group-item active">Category 1</a>
                      <a href="#" class="list-group-item">Category 2</a>
                      <a href="#" class="list-group-item">Category 3</a> -->

                      <!-- Book Activity form TODO split this out? -->
                      <form class="book-activity list-group-item" role="form">
                        <input type="hidden"
                               name="booked_activity[activity_id]"
                               value="<%= activity.escape('id') %>">

                        <div class="form-group">
                            <label for="datepicker">Date:</label>
                            <input type="text"
                                   id="datepicker"
                                   name="booked_activity[date]">
                        </div>

                        <div class="form-group">
                          <label for="party-size">Number in party:</label>
                          <input type="text"
                                 id="party-size"
                                 name="booked_activity[party_size]"
                                 value="1">
                        </div>

                        <input type="submit"
                                name="button"
                                class="book-activity btn btn-success"
                                value="Book!" />
                      </form>
                  </div>
              </div>
            <% } %>
        </div>

    </div>
    <!-- /.container -->
