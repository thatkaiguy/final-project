<div class="rateit" data-rateit-resetable="false">
</div>

<form class="review-form" role="form">

  <div class="form-group">
    <label for="review_body">New Review</label>
    <textarea id="review_body"
              name="review[body]"
              class="form-control"
              rows="8" cols="40">
      <%= review.escape('body') %>
    </textarea>
  </div>
  <input type="submit"
         class="btn btn-default"
         name="name"
         value="Submit Review">

</form>
