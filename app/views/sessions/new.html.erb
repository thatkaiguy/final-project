<%#= render "/shared/errors" %>
<% if flash[:errors] %>
  <ul class="flash-errors">
    <% flash[:errors].each do |error| %>
      <div class="alert-danger alert-dismissible"
           role="alert">
        <button type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
        <strong>Error: </strong><%= error %>
      </div>
    <% end %>
  </ul>
<% end %>
<%= render "/shared/user_form", user: @user, is_login_page: true %>
